<script>

	function SetInline()
	{
		$my_div = $('.filter_left, .container');
		$class_name = "displayBlock";

		if ($(this).width() < 1330)
		{
			if(!$my_div.hasClass($class_name))
			{
				$my_div.addClass($class_name);
			}
			//$my_div.css("display: inline-block");
		}
		else
		{
			if($my_div.hasClass($class_name))
			{
				$my_div.removeClass($class_name);
			}
		}
	}
	SetInline();

	$(document).ready(function(){
		$(window).resize(SetInline);
	});
</script>

